<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ssafy.ws.trip.informarticle.repository.InformArticleRepository">
	<resultMap type="informArticleDto" id="article">
		<result column="article_no" property="articleNo"/>
		<result column="user_id" property="userId"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="createdat" property="createdAt"/>
	</resultMap>
	
	<insert id="writeArticle" parameterType="InformArticleDto">
		insert into informarticle (user_id, title, content, hit, createdat)
		values (#{userId}, #{title}, #{content}, 0, now())
	</insert>
	
	<select id="listArticle" resultMap="InformArticleDto">
		select article_no, user_id, title, content, hit, createdat
		from informarticle
	</select>
	
	
